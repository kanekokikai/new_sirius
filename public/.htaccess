<IfModule mod_rewrite.c>
  RewriteEngine On

  # If the requested path is an existing file or directory, serve it as-is.
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback: send all other requests to index.html
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  # Always revalidate HTML so new builds reflect immediately.
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  </FilesMatch>

  # Cache static assets aggressively (Vite outputs hashed filenames).
  <FilesMatch "\.(js|css|svg|png|jpg|jpeg|gif|webp|ico|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>



